:root {
  font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
  line-height: 1.5;
  font-weight: 400;

  color-scheme: dark;
  color: rgba(255, 255, 255, 0.87);
  background-color: #0a0a0a;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  min-height: 100vh;
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 2rem;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-bottom: 2px solid #646cff;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.header h1 {
  margin: 0;
  font-size: 2.5rem;
  background: linear-gradient(90deg, #646cff, #00C853);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.subtitle {
  margin: 0;
  color: #888;
  font-size: 1.125rem;
}

.wallet-section {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
}

.wallet-info {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 0.75rem 1.5rem;
  background: #1a1a1a;
  border-radius: 8px;
  border: 1px solid #333;
}

.address {
  font-family: 'Monaco', 'Courier New', monospace;
  color: #64DD17;
  font-weight: 600;
}

.network-warning {
  padding: 1rem 1.5rem;
  background: #ff4444;
  border-radius: 8px;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  max-width: 500px;
}

.network-warning p {
  margin: 0;
  color: white;
  font-weight: 600;
}

.network-warning button {
  margin: 0 0.5rem;
}

.connect-wallet {
  margin-top: 1rem;
}

.main {
  flex: 1;
  padding: 2rem;
}

.welcome {
  text-align: center;
  padding: 4rem 2rem;
  max-width: 600px;
  margin: 0 auto;
}

.welcome h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
}

.welcome p {
  color: #888;
  font-size: 1.125rem;
}

.footer {
  padding: 1.5rem;
  text-align: center;
  border-top: 1px solid #333;
  color: #666;
  font-size: 0.875rem;
}

/* Buttons */
.btn-primary,
.btn-secondary {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
  border-radius: 8px;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
  font-family: inherit;
}

.btn-primary {
  background: linear-gradient(90deg, #646cff, #747bff);
  color: white;
}

.btn-primary:hover:not(:disabled) {
  background: linear-gradient(90deg, #535bf2, #646cff);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(100, 108, 255, 0.4);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.btn-secondary {
  background: #2a2a2a;
  color: #aaa;
  border: 1px solid #444;
}

.btn-secondary:hover:not(:disabled) {
  background: #333;
  color: #fff;
  border-color: #666;
}

.btn-secondary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

@media (max-width: 768px) {
  .header h1 {
    font-size: 2rem;
  }

  .subtitle {
    font-size: 1rem;
  }

  .main {
    padding: 1rem;
  }
}

/* Loading State */
.loading-state {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border: 2px solid #646cff;
  border-radius: 16px;
  padding: 3rem 2rem;
  text-align: center;
  margin: 2rem 0;
  animation: pulse 2s ease-in-out infinite;
}

.loading-state h3 {
  color: #646cff;
  font-size: 1.5rem;
  margin: 1rem 0;
}

.loading-state p {
  color: #aaa;
  margin: 0.5rem 0;
}

.loading-state .tip {
  color: #00C853;
  font-size: 0.9rem;
  font-style: italic;
  margin-top: 1rem;
}

.spinner {
  width: 60px;
  height: 60px;
  margin: 0 auto 1rem;
  border: 4px solid rgba(100, 108, 255, 0.1);
  border-top: 4px solid #646cff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

.win-condition {
  color: #00C853;
  font-weight: bold;
  margin-top: 1rem;
}

/* Game Stats Banner */
.game-stats {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border: 2px solid #646cff;
  border-radius: 16px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.game-stats .stat {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.game-stats .label {
  color: #aaa;
  font-size: 0.9rem;
  font-weight: 500;
}

.game-stats .value {
  color: #00C853;
  font-size: 1.2rem;
  font-weight: bold;
}

/* AI Narrative Styling */
.disaster-alert {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  border: 2px solid #ef4444;
  border-radius: 12px;
  padding: 1rem 1.5rem;
  margin: 1rem 0;
  box-shadow: 0 4px 6px rgba(220, 38, 38, 0.3);
}

.disaster-alert h4 {
  margin: 0;
  font-size: 1.3rem;
  color: #fff;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  letter-spacing: 0.5px;
}

.ai-narrative {
  background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  border: 2px solid #3b82f6;
  border-radius: 12px;
  padding: 1.5rem;
  margin: 1rem 0;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
  animation: fadeIn 0.5s ease-in;
}

.narrative-text {
  font-family: 'Georgia', serif;
  font-size: 1.1rem;
  line-height: 1.7;
  color: #e0e7ff;
  margin: 0;
  white-space: pre-line;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.narrative-box {
  background: linear-gradient(135deg, #1a1f35 0%, #0f1419 100%);
  border: 3px solid #6366f1;
  border-radius: 16px;
  padding: 2rem;
  margin: 2rem 0;
  box-shadow: 0 8px 24px rgba(99, 102, 241, 0.3);
  position: relative;
  overflow: hidden;
}

.narrative-box::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(45deg, #6366f1, #8b5cf6, #d946ef);
  border-radius: 16px;
  z-index: -1;
  opacity: 0.1;
  animation: pulse 3s ease-in-out infinite;
}

.narrative-box h3 {
  margin: 0 0 1.5rem 0;
  font-size: 1.5rem;
  color: #a5b4fc;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hero Section Styles */
.hero-section {
  max-width: 1000px;
  margin: 0 auto;
  text-align: center;
}

.hero-section h2 {
  font-size: 3rem;
  margin-bottom: 0.5rem;
  background: linear-gradient(90deg, #ff6b6b, #ffd93d, #6bcf7f);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: fadeIn 0.6s ease-in;
}

.tagline {
  font-size: 1.3rem;
  color: #aaa;
  margin-bottom: 3rem;
  font-style: italic;
}

.game-story {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin: 3rem 0;
}

.story-card {
  background: linear-gradient(135deg, #1a1f35 0%, #0f1419 100%);
  border: 2px solid #646cff;
  border-radius: 16px;
  padding: 2rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.story-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(100, 108, 255, 0.3);
}

.story-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.story-card h3 {
  margin: 0.5rem 0;
  color: #fff;
  font-size: 1.4rem;
}

.story-card p {
  color: #bbb;
  line-height: 1.6;
  margin: 0.5rem 0 0 0;
}

.mission-brief {
  background: linear-gradient(135deg, #2d1b69 0%, #1a0f3d 100%);
  border: 3px solid #00C853;
  border-radius: 20px;
  padding: 2rem;
  margin-top: 3rem;
  text-align: left;
}

.mission-brief h4 {
  margin: 0 0 1rem 0;
  font-size: 1.6rem;
  color: #00C853;
}

.mission-brief ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.mission-brief li {
  padding: 0.8rem 0;
  font-size: 1.1rem;
  color: #ddd;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.mission-brief li:last-child {
  border-bottom: none;
}

.mission-brief strong {
  color: #ffd93d;
  font-weight: 600;
}


/* Victory Screen */
.game-victory {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border: 3px solid #34d399;
  border-radius: 20px;
  padding: 3rem;
  margin: 2rem 0;
  text-align: center;
  box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4);
  animation: victoryPulse 2s ease-in-out infinite;
}

.game-victory h2 {
  font-size: 3rem;
  margin: 0 0 1rem 0;
  color: #fff;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
}

.game-victory h3 {
  font-size: 1.5rem;
  margin: 0 0 1.5rem 0;
  color: #d1fae5;
}

.victory-message {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #f0fdf4;
  margin: 1.5rem 0;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.victory-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin: 2rem 0;
  padding: 2rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
}

.victory-stats .stat-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.victory-stats .stat-label {
  color: #d1fae5;
  font-size: 0.9rem;
}

.victory-stats .stat-value {
  color: #fff;
  font-size: 1.5rem;
  font-weight: bold;
}

/* Reward Section */
.reward-section {
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(245, 158, 11, 0.15) 100%);
  border: 2px solid rgba(251, 191, 36, 0.5);
  border-radius: 16px;
  padding: 2rem;
  margin: 2rem 0;
}

.reward-info {
  font-size: 1.2rem;
  color: #fef3c7;
  margin-bottom: 1rem;
  text-align: center;
}

.reward-list {
  list-style: none;
  padding: 0;
  margin: 1.5rem 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
}

.reward-list li {
  font-size: 1.3rem;
  color: #fff;
  background: rgba(255, 255, 255, 0.1);
  padding: 1rem 2rem;
  border-radius: 12px;
  min-width: 300px;
  text-align: center;
  backdrop-filter: blur(10px);
}

.reward-button {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%) !important;
  border: none !important;
  color: #000 !important;
  font-size: 1.3rem !important;
  padding: 1.2rem 2.5rem !important;
  font-weight: bold;
  text-shadow: none;
  box-shadow: 0 8px 24px rgba(251, 191, 36, 0.4);
  transition: all 0.3s ease;
}

.reward-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(251, 191, 36, 0.6);
}

.reward-button:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.reward-claimed {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.15) 100%);
  border: 2px solid rgba(16, 185, 129, 0.5);
  border-radius: 16px;
  padding: 2rem;
  margin: 2rem 0;
  text-align: center;
}

.reward-claimed p {
  font-size: 1.3rem;
  color: #d1fae5;
  margin: 0.5rem 0;
}

.reward-claimed-details {
  font-size: 1.1rem;
  color: #6ee7b7;
}

@keyframes victoryPulse {
  0%, 100% { transform: scale(1); box-shadow: 0 10px 40px rgba(16, 185, 129, 0.4); }
  50% { transform: scale(1.02); box-shadow: 0 15px 50px rgba(16, 185, 129, 0.6); }
}

/* Defeat Screen */
.game-defeat {
  background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
  border: 3px solid #f87171;
  border-radius: 20px;
  padding: 3rem;
  margin: 2rem 0;
  text-align: center;
  box-shadow: 0 10px 40px rgba(220, 38, 38, 0.4);
}

.game-defeat h2 {
  font-size: 3rem;
  margin: 0 0 1rem 0;
  color: #fff;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
}

.game-defeat h3 {
  font-size: 1.5rem;
  margin: 0 0 1.5rem 0;
  color: #fecaca;
}

.defeat-message {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #fee2e2;
  margin: 1.5rem 0;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.defeat-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin: 2rem 0;
  padding: 2rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
}

.defeat-stats .stat-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.defeat-stats .stat-label {
  color: #fecaca;
  font-size: 0.9rem;
}

.defeat-stats .stat-value {
  color: #fff;
  font-size: 1.5rem;
  font-weight: bold;
}

.retry-message {
  font-size: 1rem;
  color: #fef3c7;
  margin: 1.5rem 0;
  font-style: italic;
}
