.arena-view {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
}

.arena-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.arena-header h2 {
  font-size: 2rem;
  margin: 0;
}

.phase-section {
  text-align: center;
  padding: 3rem 2rem;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 12px;
  border: 2px solid #646cff;
}

.phase-section h3 {
  font-size: 1.75rem;
  margin-bottom: 1rem;
}

.phase-section p {
  color: #aaa;
  margin-bottom: 2rem;
}

.tx-hash {
  margin-top: 1rem;
  font-size: 0.875rem;
  color: #888;
  word-break: break-all;
}

.agents-display {
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: #1a1a1a;
  border-radius: 12px;
  border: 1px solid #333;
}

.agents-display h3 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.swarm-id {
  font-size: 0.875rem;
  color: #888;
  font-weight: normal;
}

.agents-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
  gap: 1rem;
}

.agent-card {
  padding: 1rem;
  background: #2a2a2a;
  border-radius: 8px;
  border: 2px solid #444;
  text-align: center;
  transition: all 0.3s;
  position: relative;
}

.agent-card.alive {
  border-color: #4CAF50;
  box-shadow: 0 0 15px rgba(76, 175, 80, 0.3);
}

.agent-card.dead {
  opacity: 0.5;
  border-color: #666;
  background: #1a1a1a;
}

.agent-card.child {
  border-color: #FFD700;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
}

.agent-icon {
  font-size: 3rem;
  margin-bottom: 0.5rem;
}

.agent-name {
  font-weight: 700;
  color: #fff;
  font-size: 0.95rem;
  margin-bottom: 0.25rem;
  text-shadow: 0 0 10px rgba(99, 102, 241, 0.5);
}

.agent-id-small {
  font-size: 0.75rem;
  color: #888;
  font-weight: 400;
}

.agent-id {
  font-weight: 600;
  color: #aaa;
}

.child-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: #FFD700;
  color: #000;
  padding: 0.25rem 0.5rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 600;
}

.current-round {
  margin-bottom: 2rem;
  padding: 2rem;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 12px;
  border: 2px solid #FF5722;
  text-align: center;
}

.current-round h3 {
  margin-bottom: 1rem;
  color: #FF5722;
}

.disaster-display {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  margin: 1.5rem 0;
}

.disaster-icon {
  font-size: 3rem;
}

.disaster-name {
  font-size: 1.5rem;
  font-weight: 600;
  color: #FF5722;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.waiting-message {
  color: #888;
  font-style: italic;
  margin-top: 1rem;
}

.action-section {
  text-align: center;
  margin-bottom: 2rem;
}

.action-section .warning {
  margin-top: 1rem;
  color: #ff9800;
}

.game-over {
  text-align: center;
  padding: 3rem 2rem;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  border-radius: 12px;
  border: 2px solid #666;
  margin-bottom: 2rem;
}

.game-over h2 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.game-over p {
  color: #888;
  margin-bottom: 2rem;
}

.round-history {
  margin-top: 2rem;
  padding: 1.5rem;
  background: #1a1a1a;
  border-radius: 12px;
  border: 1px solid #333;
}

.round-history h3 {
  margin-bottom: 1rem;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.history-item {
  padding: 1rem;
  background: #2a2a2a;
  border-radius: 8px;
  border: 1px solid #444;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.round-number {
  font-weight: 600;
  color: #fff;
}

.disaster-badge {
  font-size: 0.75rem;
  padding: 0.25rem 0.75rem;
  background: #FF5722;
  color: white;
  border-radius: 12px;
  font-weight: 600;
  text-transform: uppercase;
}

.history-body p {
  margin: 0.25rem 0;
  color: #aaa;
  font-size: 0.875rem;
}
